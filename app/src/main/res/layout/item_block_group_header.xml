<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:layout_marginBottom="4dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    android:backgroundTint="@color/primary">

    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true">

        <!-- Row Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/rowNameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BLOCK A"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/rowRangeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(A1-A7)"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:alpha="0.9"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/expandIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â–¼"
                android:textSize="20sp"
                android:textColor="@android:color/white" />

        </LinearLayout>

        <!-- Row Stats -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/plantedCountText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ðŸŒ± Planted: 5/7"
                android:textSize="14sp"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/survivalRateText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ðŸ“Š Avg: 91%"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:gravity="center" />

            <TextView
                android:id="@+id/treesText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ðŸŒ³ 500/700"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:gravity="end" />

        </LinearLayout>

        <!-- Progress Bar for visual representation -->
        <ProgressBar
            android:id="@+id/rowProgressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_marginTop="12dp"
            android:progress="71"
            android:max="100"
            android:progressTint="@android:color/white"
            android:backgroundTint="@android:color/darker_gray" />

    </LinearLayout>

</androidx.cardview.widget.CardView>