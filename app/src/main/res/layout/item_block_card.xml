<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@android:color/white"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header with block name and status (always visible) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/blockNameText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Block A1"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/primary" />

            <TextView
                android:id="@+id/statusText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="12dp"
                android:paddingVertical="4dp"
                android:text="Planted"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="@drawable/status_background" />

        </LinearLayout>

        <!-- Quick Stats (always visible) -->
        <TextView
            android:id="@+id/statsText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Alive: 95 | Dead: 5"
            android:textSize="16sp"
            android:textColor="@color/text_dark"
            android:layout_marginTop="12dp" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/warm_grey"
            android:layout_marginVertical="12dp" />

        <!-- Expandable Header (click to expand/collapse) -->
        <LinearLayout
            android:id="@+id/expandHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="4dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="View details"
                android:textSize="16sp"
                android:textColor="@color/accent"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/expandIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â–¼"
                android:textSize="20sp"
                android:textColor="@color/accent" />

        </LinearLayout>

        <!-- Expandable Content (initially hidden) -->
        <LinearLayout
            android:id="@+id/expandableContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginTop="12dp">

            <!-- Planting Date -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Planted:"
                    android:textSize="14sp"
                    android:textColor="@color/navy"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/dateText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Mar 15, 2024"
                    android:textSize="14sp"
                    android:textColor="@color/text_dark" />

            </LinearLayout>

            <!-- Replacement Count -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Replacements:"
                    android:textSize="14sp"
                    android:textColor="@color/navy"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/replacementText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="2 trees"
                    android:textSize="14sp"
                    android:textColor="@color/text_dark" />

            </LinearLayout>

            <!-- Survival Rate Progress Bar -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Survival Rate"
                    android:textSize="14sp"
                    android:textColor="@color/navy"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp" />

                <ProgressBar
                    android:id="@+id/survivalProgress"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:progress="95"
                    android:max="100"
                    android:progressTint="@color/primary" />

                <TextView
                    android:id="@+id/survivalText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="95%"
                    android:textSize="12sp"
                    android:textColor="@color/primary"
                    android:layout_gravity="end"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

            <!-- Notes -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp"
                android:background="@color/warm_grey"
                android:padding="8dp"
                android:visibility="gone"
                android:id="@+id/notesSection">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Notes"
                    android:textSize="14sp"
                    android:textColor="@color/navy"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/notesText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sample notes here"
                    android:textSize="14sp"
                    android:textColor="@color/text_dark" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>