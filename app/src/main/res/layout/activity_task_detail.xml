<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background">

    <!-- Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/primary"
        app:titleTextColor="@android:color/white"
        app:navigationIconTint="@android:color/white" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Header Card with Title and Type -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="20dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tvTaskIcon"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:gravity="center"
                        android:text="ðŸšœ"
                        android:textSize="32sp"
                        android:background="@color/warm_grey"
                        android:layout_marginEnd="16dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvTaskTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Clear Block A1"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_dark" />

                        <TextView
                            android:id="@+id/tvTaskType"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Land Clearing"
                            android:textSize="14sp"
                            android:textColor="@color/navy"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Status Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Current Status"
                        android:textSize="14sp"
                        android:textColor="@color/navy"
                        android:layout_marginBottom="12dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/tvCurrentStatus"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="â³ PENDING"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/primary" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnUpdateStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Update"
                            android:backgroundTint="@color/accent" />

                    </LinearLayout>

                    <!-- Status Timeline -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="16dp"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tvPendingDot"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/circle_green"
                            android:layout_marginEnd="4dp" />

                        <View
                            android:layout_width="30dp"
                            android:layout_height="2dp"
                            android:background="@color/warm_grey"
                            android:layout_marginHorizontal="4dp" />

                        <TextView
                            android:id="@+id/tvInProgressDot"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/circle_grey"
                            android:layout_marginHorizontal="4dp" />

                        <View
                            android:layout_width="30dp"
                            android:layout_height="2dp"
                            android:background="@color/warm_grey"
                            android:layout_marginHorizontal="4dp" />

                        <TextView
                            android:id="@+id/tvCompletedDot"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/circle_grey"
                            android:layout_marginStart="4dp" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Details Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Task Details"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_dark"
                        android:layout_marginBottom="16dp" />

                    <!-- Block -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="Block:"
                            android:textSize="14sp"
                            android:textColor="@color/navy"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvBlockName"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Block A1"
                            android:textSize="14sp"
                            android:textColor="@color/text_dark" />

                    </LinearLayout>

                    <!-- Due Date -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="Due Date:"
                            android:textSize="14sp"
                            android:textColor="@color/navy"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvDueDate"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Mar 15, 2024"
                            android:textSize="14sp"
                            android:textColor="@color/text_dark" />

                    </LinearLayout>

                    <!-- Completed Date (if completed) -->
                    <LinearLayout
                        android:id="@+id/layoutCompletedDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="Completed:"
                            android:textSize="14sp"
                            android:textColor="@color/navy"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvCompletedDate"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text=""
                            android:textSize="14sp"
                            android:textColor="@color/primary" />

                    </LinearLayout>

                    <!-- Description -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Description:"
                        android:textSize="14sp"
                        android:textColor="@color/navy"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/tvDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Clear land for planting cashew trees"
                        android:textSize="14sp"
                        android:textColor="@color/text_dark"
                        android:background="@color/warm_grey"
                        android:padding="12dp"
                        android:minLines="3" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Assignment Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Worker Assignment"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_dark" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnAssignWorker"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Assign"
                            android:backgroundTint="@color/primary" />

                    </LinearLayout>

                    <!-- Current Assignment -->
                    <LinearLayout
                        android:id="@+id/layoutCurrentAssignment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@color/warm_grey"
                        android:padding="12dp"
                        android:layout_marginBottom="16dp"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Currently Assigned To:"
                            android:textSize="12sp"
                            android:textColor="@color/navy"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/tvCurrentWorker"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="John Doe"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/primary"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/tvAssignedSince"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Assigned: Mar 10, 2024"
                            android:textSize="12sp"
                            android:textColor="@color/navy" />

                    </LinearLayout>

                    <!-- Assignment History -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Assignment History"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/navy"
                        android:layout_marginBottom="12dp" />

                    <LinearLayout
                        android:id="@+id/assignmentHistoryContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" />

                    <TextView
                        android:id="@+id/tvNoAssignments"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="No assignment history"
                        android:textSize="14sp"
                        android:textColor="@color/navy"
                        android:gravity="center"
                        android:padding="16dp"
                        android:visibility="gone" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="24dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnEdit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="Edit"
                    android:backgroundTint="@color/accent"
                    app:icon="@android:drawable/ic_menu_edit"
                    app:iconGravity="textStart" />

                <Button
                    android:id="@+id/btnDelete"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Delete"
                    android:backgroundTint="@android:color/holo_red_dark"
                    app:icon="@android:drawable/ic_menu_delete"
                    app:iconGravity="textStart" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- Floating Action Button for quick status update -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:src="@android:drawable/ic_menu_edit"
        android:contentDescription="Update status"
        app:backgroundTint="@color/accent" />

</LinearLayout>